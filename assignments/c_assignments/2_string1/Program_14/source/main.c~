#include<stdio.h>
#include<stdlib.h>

int main()
{
	char *str;
	char *sstr;
	int n;

	str = (char *) malloc(sizeof(char)*MAX);
	sstr = (char *) malloc(sizeof(char)*MAX);

	printf("enter the string: ");
	fgets(str, MAX, stdin);

	printf("enter the sub string: ");
	fgets(sstr, MAX, stdin);
	
	substring(str, sstr);
	
	printf("the modified string is : %s",str);

	
}

